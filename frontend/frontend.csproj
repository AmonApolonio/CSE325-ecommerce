<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>frontend</AssemblyName> 
    <RootNamespace>frontend</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Authorization" Version="9.0.0-preview.6.24328.4" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.1" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="9.0.1" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.0-preview.6.24327.7" />
    <PackageReference Include="System.Net.Http.Json" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\cse325_ecommerce.Shared\cse325_ecommerce.Shared.csproj" />
  </ItemGroup>

  <Target Name="EnsureNodeModules" BeforeTargets="Build">
    <Exec Command="npm install" Condition="!Exists('node_modules')" />
  </Target>

  <Target Name="BuildCSS" BeforeTargets="Build">
    <Exec Command="npm run build-prod" />
  </Target>

</Project>