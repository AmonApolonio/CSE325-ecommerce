@page "/"
@using frontend.Components.Product
@using frontend.Utils
@using frontend.Services
@using frontend.Models.Dtos
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

@inject IProductService ProductService
@inject ICategoryService CategoryService
@inject ICartService CartService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject HttpClient HttpClient
@inject IJSRuntime JSRuntime

<PageTitle>Home - SharpCraft Shop</PageTitle>

@code {
    private List<ProductDto> _products = new();
    private List<CategoryDto> _categories = new();
    private bool _isLoading = true;
    private string? _errorMessage;
    private string? _userRole;

    /// <summary>
    /// Initializes the component and loads products and categories.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            // Get user role
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            _userRole = authState.User.FindFirst(ClaimTypes.Role)?.Value;

            // Initialize cart for anonymous users
            await InitializeAnonymousCart();

            // Fetch products and categories in parallel
            var productsTask = ProductService.GetAllProductsAsync();
            var categoriesTask = CategoryService.GetAllCategoriesAsync();
            
            await Task.WhenAll(productsTask, categoriesTask);
            
            _products = productsTask.Result;
            _categories = categoriesTask.Result;
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading data: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    /// <summary>
    /// Initializes an anonymous cart for non-authenticated users.
    /// </summary>
    private async Task InitializeAnonymousCart()
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            
            if (authState.User.Identity?.IsAuthenticated ?? false)
            {
                return;
            }

            var existingCartIdStr = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "cartId");
            if (!string.IsNullOrEmpty(existingCartIdStr) && long.TryParse(existingCartIdStr, out var existingCartId) && existingCartId > 0)
            {
                return;
            }

            var cartId = await CartService.CreateAnonymousCartAsync();
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "cartId", cartId.ToString());
        }
        catch { }
    }

    /// <summary>
    /// Handles product click navigation to item detail page.
    /// </summary>
    /// <param name="productId">The ID of the product to navigate to.</param>
    private void HandleProductClick(long productId)
    {
        NavigationManager.NavigateTo($"item/{productId}");
    }

    /// <summary>
    /// Handles adding a product to the user's cart.
    /// Requires authentication and redirects to login if not authenticated.
    /// </summary>
    /// <param name="productId">The ID of the product to add to cart.</param>
    private async Task HandleAddToCart(long productId)
    {
        try
        {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            if (!authState.User.Identity?.IsAuthenticated ?? true)
            {
                NavigationManager.NavigateTo("login");
                return;
            }

            var email = authState.User.FindFirst("sub")?.Value;
            var role = authState.User.FindFirst(ClaimTypes.Role)?.Value;
            if (string.IsNullOrEmpty(email) || string.IsNullOrEmpty(role))
            {
                _errorMessage = "Unable to identify user.";
                return;
            }

            // Get the authenticated user's cart
            var userCart = await CartService.GetUserCartAsync();
            var cartId = userCart.CartId;

            await CartService.AddToCartAsync(cartId, productId, 1);
            // Optionally, show success message or update UI
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error adding to cart: {ex.Message}";
        }
    }

    /// <summary>
    /// Handles category click navigation to search page with category filter.
    /// </summary>
    /// <param name="categoryId">The ID of the category to filter by.</param>
    private void HandleCategoryClick(long categoryId)
    {
        NavigationManager.NavigateTo($"search?categoryId={categoryId}");
    }
}

@if (_isLoading)
{
    <div class="flex items-center justify-center py-16">
        <div class="text-center">
            <i class="fas fa-spinner fa-spin text-orange-400 text-4xl mb-4"></i>
            <p class="text-gray-600">Loading products...</p>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(_errorMessage))
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4">
        <p class="font-bold">Error</p>
        <p>@_errorMessage</p>
    </div>
}
else
{
    <div class="bg-white">
        @* Hero Section *@
        <section class="mb-8">
            <img
                src="images/hero.jpg"
                alt="Hero Banner"
                class="w-full h-64 object-cover rounded-lg border-2 border-orange-300/50"
                style="width: 100%; height: 256px; object-fit: cover;"
            />
        </section>

        @* Featured Products Section *@
        <section>
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-800">Featured Products</h2>
            </div>

            @if (_products.Count > 0)
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    @foreach (var product in _products.Take(8))
                    {
                        <div 
                            class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-lg transition-shadow p-4 cursor-pointer"
                            @onclick="@(() => HandleProductClick(product.ProductId))"
                        >
                            <div class="mb-4 h-48 bg-gray-100 rounded flex items-center justify-center">
                                <i class="fas fa-image text-gray-300 text-4xl"></i>
                            </div>
                            <h3 class="font-semibold text-gray-800 mb-2 line-clamp-1">@product.Name</h3>
                            <p class="text-sm text-gray-600 mb-3 line-clamp-2">@product.Description</p>
                            <div class="flex justify-between items-center">
                                <span class="text-lg font-bold text-orange-500">$@product.GetPriceAsDecimal().ToString("F2")</span>
                                @if (_userRole != "Seller")
                                {
                                    <button
                                        @onclick="@(async () => await HandleAddToCart(product.ProductId))"
                                        @onclick:stopPropagation="true"
                                        class="bg-orange-400 hover:bg-orange-500 text-white px-3 py-2 rounded transition-colors"
                                    >
                                        <i class="fa-solid fa-cart-plus"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-8">
                    <p class="text-gray-500">No products available</p>
                </div>
            }
        </section>

        @* Categories Section *@
        <section class="mt-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Shop by Category</h2>
            @if (_categories.Count > 0)
            {
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    @foreach (var category in _categories)
                    {
                        <div
                            class="h-32 bg-orange-50 border-2 border-orange-300/50 border-dashed rounded-lg flex items-center justify-center transition-transform transform hover:scale-105 hover:bg-orange-300 cursor-pointer"
                            @onclick="@(() => HandleCategoryClick(category.CategoryId))"
                            role="button"
                            tabindex="0"
                        >
                            <span class="font-semibold text-gray-600 text-center px-2">@category.Name</span>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-8">
                    <p class="text-gray-500">No categories available</p>
                </div>
            }
        </section>
    </div>
}
