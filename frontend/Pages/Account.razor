@page "/account"
@using frontend.Services
@using frontend.Models.Dtos
@using Microsoft.AspNetCore.Components.Web

@inject IClientService ClientService
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<PageTitle>My Account - SharpCraft Shop</PageTitle>

@code {
    private ClientDto? _client;
    private bool _isLoading = true;
    private bool _isSaving = false;
    private string? _errorMessage;
    private string? _successMessage;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        try
        {
            // TODO: Get current user ID from authentication context
            // For now, show placeholder until authentication integration is complete
            _client = new ClientDto();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading account: {ex.Message}";
            Console.WriteLine(_errorMessage);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task SaveChanges()
    {
        _isSaving = true;
        _errorMessage = null;
        _successMessage = null;

        try
        {
            if (_client != null && _client.UserId > 0)
            {
                await ClientService.UpdateClientAsync(_client.UserId, _client);
                _successMessage = "Profile updated successfully!";
            }
            else
            {
                _errorMessage = "Unable to save: User not loaded";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error saving profile: {ex.Message}";
            Console.WriteLine(_errorMessage);
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void GoToOrders()
    {
        NavigationManager.NavigateTo("/account/orders");
    }

    private void GoToLogout()
    {
        NavigationManager.NavigateTo("/logout");
    }
}

<div class="bg-white">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">My Account</h1>

    @if (_isLoading)
    {
        <div class="flex items-center justify-center py-16">
            <div class="text-center">
                <i class="fas fa-spinner fa-spin text-orange-400 text-4xl mb-4"></i>
                <p class="text-gray-600">Loading account...</p>
            </div>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            @* Sidebar Menu *@
            <div class="md:col-span-1">
                <div class="bg-orange-50 border-2 border-orange-300/50 rounded-lg overflow-hidden">
                    <a href="/account" class="block px-6 py-3 bg-orange-400 text-white font-semibold">
                        <i class="fas fa-user mr-2"></i>Profile
                    </a>
                    <button @onclick="GoToOrders" class="block w-full text-left px-6 py-3 text-gray-800 hover:bg-orange-100 transition">
                        <i class="fas fa-box mr-2"></i>Orders
                    </button>
                    <a href="/account/settings" class="block px-6 py-3 text-gray-800 hover:bg-orange-100 transition">
                        <i class="fas fa-cog mr-2"></i>Settings
                    </a>
                    <button @onclick="GoToLogout" class="block w-full text-left px-6 py-3 text-gray-800 hover:bg-red-100 transition border-t-2 border-orange-300/50">
                        <i class="fas fa-sign-out-alt mr-2"></i>Logout
                    </button>
                </div>
            </div>

            @* Profile Section *@
            <div class="md:col-span-2">
                <div class="bg-orange-50 border-2 border-orange-300/50 rounded-lg p-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Profile Information</h2>
                    
                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="mb-4 p-3 bg-red-100 border-l-4 border-red-500 text-red-700">
                            <p>@_errorMessage</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(_successMessage))
                    {
                        <div class="mb-4 p-3 bg-green-100 border-l-4 border-green-500 text-green-700">
                            <p>@_successMessage</p>
                        </div>
                    }
                    
                    @if (_client != null)
                    {
                        <div class="space-y-4">
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm text-gray-600 font-semibold mb-2">First Name</label>
                                    <input type="text" @bind="_client.Name" placeholder="John" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" disabled="@_isSaving" />
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm text-gray-600 font-semibold mb-2">Email</label>
                                <input type="email" @bind="_client.Email" placeholder="john@example.com" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" disabled="@_isSaving" />
                            </div>

                            <div>
                                <label class="block text-sm text-gray-600 font-semibold mb-2">Phone</label>
                                <input type="tel" @bind="_client.PhoneNumber" placeholder="+1 (555) 123-4567" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" disabled="@_isSaving" />
                            </div>

                            <div>
                                <label class="block text-sm text-gray-600 font-semibold mb-2">Address</label>
                                <input type="text" @bind="_client.Address1" placeholder="123 Main St" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" disabled="@_isSaving" />
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm text-gray-600 font-semibold mb-2">City</label>
                                    <input type="text" @bind="_client.City" placeholder="New York" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" disabled="@_isSaving" />
                                </div>
                                <div>
                                    <label class="block text-sm text-gray-600 font-semibold mb-2">State</label>
                                    <input type="text" @bind="_client.State" placeholder="NY" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" disabled="@_isSaving" />
                                </div>
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm text-gray-600 font-semibold mb-2">Zip Code</label>
                                    <input type="text" @bind="_client.ZipCode" placeholder="10001" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" disabled="@_isSaving" />
                                </div>
                                <div>
                                    <label class="block text-sm text-gray-600 font-semibold mb-2">Country</label>
                                    <input type="text" @bind="_client.Country" placeholder="USA" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" disabled="@_isSaving" />
                                </div>
                            </div>

                            <button 
                                class="mt-6 px-6 py-3 bg-orange-400 text-white font-semibold rounded-lg hover:bg-orange-500 transition disabled:bg-gray-400 disabled:cursor-not-allowed"
                                @onclick="SaveChanges"
                                disabled="@_isSaving"
                            >
                                @if (_isSaving)
                                {
                                    <span><i class="fas fa-spinner fa-spin mr-2"></i>Saving...</span>
                                }
                                else
                                {
                                    <span><i class="fas fa-save mr-2"></i>Save Changes</span>
                                }
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
