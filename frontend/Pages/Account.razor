@page "/account"

<PageTitle>My Account - SharpCraft Shop</PageTitle>

@code {
}

<div class="bg-white">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">My Account</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        @* Sidebar Menu *@
        <div class="md:col-span-1">
            <div class="bg-orange-50 border-2 border-orange-300/50 rounded-lg overflow-hidden">
                <a href="/account" class="block px-6 py-3 bg-orange-400 text-white font-semibold">
                    <i class="fas fa-user mr-2"></i>Profile
                </a>
                <a href="/account/orders" class="block px-6 py-3 text-gray-800 hover:bg-orange-100 transition">
                    <i class="fas fa-box mr-2"></i>Orders
                </a>
                <a href="/account/wishlist" class="block px-6 py-3 text-gray-800 hover:bg-orange-100 transition">
                    <i class="fas fa-heart mr-2"></i>Wishlist
                </a>
                <a href="/account/settings" class="block px-6 py-3 text-gray-800 hover:bg-orange-100 transition">
                    <i class="fas fa-cog mr-2"></i>Settings
                </a>
                <a href="/logout" class="block px-6 py-3 text-gray-800 hover:bg-red-100 transition border-t-2 border-orange-300/50">
                    <i class="fas fa-sign-out-alt mr-2"></i>Logout
                </a>
            </div>
        </div>

        @* Profile Section *@
        <div class="md:col-span-2">
            <div class="bg-orange-50 border-2 border-orange-300/50 rounded-lg p-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Profile Information</h2>
                
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm text-gray-600 font-semibold mb-2">First Name</label>
                            <input type="text" placeholder="John" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" />
                        </div>
                        <div>
                            <label class="block text-sm text-gray-600 font-semibold mb-2">Last Name</label>
                            <input type="text" placeholder="Doe" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" />
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm text-gray-600 font-semibold mb-2">Email</label>
                        <input type="email" placeholder="john@example.com" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" />
                    </div>

                    <div>
                        <label class="block text-sm text-gray-600 font-semibold mb-2">Phone</label>
                        <input type="tel" placeholder="+1 (555) 123-4567" class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50" />
                    </div>

                    <div>
                        <label class="block text-sm text-gray-600 font-semibold mb-2">Bio</label>
                        <textarea placeholder="Tell us about yourself..." class="w-full px-4 py-2 rounded-lg border-2 border-orange-300 focus:outline-none focus:ring-2 focus:ring-orange-300/50 h-24"></textarea>
                    </div>

                    <button class="mt-6 px-6 py-3 bg-orange-400 text-white font-semibold rounded-lg hover:bg-orange-500 transition">
                        <i class="fas fa-save mr-2"></i>Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
