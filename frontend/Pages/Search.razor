@page "/search"
@using frontend.Services
@using frontend.Models.Dtos
@using Microsoft.AspNetCore.Components.Web

@inject IProductService ProductService
@inject ICategoryService CategoryService
@inject NavigationManager NavigationManager

<PageTitle>Search - SharpCraft Shop</PageTitle>

@code {
    private List<ProductDto> _allProducts = new();
    private List<ProductDto> _filteredProducts = new();
    private string _searchQuery = string.Empty;
    private bool _isLoading = true;
    private string? _errorMessage;

    [SupplyParameterFromQuery(Name = "q")]
    public string? Query { get; set; }

    [SupplyParameterFromQuery(Name = "categoryId")]
    public long? CategoryId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        try
        {
            // Fetch all products
            _allProducts = await ProductService.GetAllProductsAsync();
            
            // Apply filters from URL parameters
            ApplyFilters();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine(_errorMessage);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ApplyFilters()
    {
        _filteredProducts = _allProducts.AsEnumerable().Where(p =>
        {
            // Filter by search query
            if (!string.IsNullOrEmpty(_searchQuery) &&
                !p.Name?.Contains(_searchQuery, StringComparison.OrdinalIgnoreCase) == true &&
                !p.Description?.Contains(_searchQuery, StringComparison.OrdinalIgnoreCase) == true)
            {
                return false;
            }

            // Filter by category
            if (CategoryId.HasValue && p.CategoryId != CategoryId.Value)
            {
                return false;
            }

            return true;
        }).ToList();
    }

    public async Task HandleSearch(string query)
    {
        _searchQuery = query;
        ApplyFilters();
        StateHasChanged();
        await Task.CompletedTask;
    }

    private void HandleProductClick(long productId)
    {
        NavigationManager.NavigateTo($"/item/{productId}");
    }
}

<div class="bg-white">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">Search Products</h1>

    @if (_isLoading)
    {
        <div class="flex items-center justify-center py-16">
            <div class="text-center">
                <i class="fas fa-spinner fa-spin text-orange-400 text-4xl mb-4"></i>
                <p class="text-gray-600">Loading products...</p>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
            <p class="font-bold">Error</p>
            <p>@_errorMessage</p>
        </div>
    }
    else
    {
        @if (_filteredProducts.Count == 0)
        {
            <div class="text-center py-16">
                <i class="fas fa-search text-gray-300 text-6xl mb-4"></i>
                <p class="text-gray-600 text-lg">No products found</p>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                @foreach (var product in _filteredProducts)
                {
                    <div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-lg transition-shadow p-4">
                        <div class="mb-4 h-48 bg-gray-100 rounded flex items-center justify-center">
                            <i class="fas fa-image text-gray-300 text-4xl"></i>
                        </div>
                        <h3 class="font-semibold text-gray-800 mb-2">@product.Name</h3>
                        <p class="text-sm text-gray-600 mb-3 line-clamp-2">@product.Description</p>
                        <div class="flex justify-between items-center">
                            <span class="text-lg font-bold text-orange-500">$@product.GetPriceAsDecimal().ToString("F2")</span>
                            <button
                                class="bg-orange-400 hover:bg-orange-500 text-white px-4 py-2 rounded transition-colors"
                                @onclick="@(() => HandleProductClick(product.ProductId))"
                            >
                                View
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>
