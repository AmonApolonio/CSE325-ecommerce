@page "/cart"
@using frontend.Services
@using frontend.Models.Dtos
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims

@inject ICartService CartService
@inject IProductService ProductService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject HttpClient HttpClient
@inject IJSRuntime JSRuntime

<PageTitle>Shopping Cart - SharpCraft Shop</PageTitle>

@code {
    private CartDto? _cart;
    private long _cartId = 0;
    private bool _isLoading = true;
    private string? _errorMessage;
    private Dictionary<long, ProductDto?> _productCache = new();
    private string? _userRole;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        _errorMessage = null;

        // Check if user is authenticated
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        if (!authState.User.Identity?.IsAuthenticated ?? true)
        {
            NavigationManager.NavigateTo("login");
            return;
        }

        // Check if user is a seller
        _userRole = authState.User.FindFirst(ClaimTypes.Role)?.Value;
        if (_userRole == "Seller")
        {
            _errorMessage = "Sellers cannot add items to cart. This feature is only available for customers.";
            _isLoading = false;
            return;
        }

        try
        {
            // Try to get cartId from localStorage (set after login or during anonymous browsing)
            var cartIdFromStorage = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "cartId");
            if (!string.IsNullOrEmpty(cartIdFromStorage) && long.TryParse(cartIdFromStorage, out var cartId))
            {
                _cartId = cartId;
                Console.WriteLine($"Retrieved cartId from localStorage: {_cartId}");
                
                // Fetch the cart using the cartId
                await RefreshCartByCartId();
            }
            else
            {
                // No cartId in localStorage - create new cart and merge with authenticated user
                Console.WriteLine("No cartId found in localStorage. Creating new cart for authenticated user...");
                await CreateAndMergeCartForAuthenticatedUser();
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading cart: {ex.Message}";
            Console.WriteLine(_errorMessage);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task CreateAndMergeCartForAuthenticatedUser()
    {
        try
        {
            // Step 1: Create a new anonymous cart
            Console.WriteLine("Step 1: Creating new anonymous cart...");
            var newCartId = await CartService.CreateAnonymousCartAsync();
            Console.WriteLine($"Created anonymous cart with ID: {newCartId}");

            // Step 2: Merge the anonymous cart with the authenticated user
            Console.WriteLine($"Step 2: Merging cart {newCartId} with authenticated user...");
            var mergedCart = await CartService.MergeCartAsync(newCartId);
            Console.WriteLine($"Cart merged successfully. Merged cartId: {mergedCart.CartId}");

            // Step 3: Store the merged cartId in localStorage
            _cartId = mergedCart.CartId;
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "cartId", _cartId.ToString());
            Console.WriteLine($"Stored merged cartId in localStorage: {_cartId}");

            // Step 4: Load the cart
            await RefreshCartByCartId();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error creating cart for authenticated user: {ex.Message}";
            Console.WriteLine(_errorMessage);
        }
    }

    private async Task RefreshCartByCartId()
    {
        if (_cartId == 0)
        {
            _errorMessage = "Cart ID is not set";
            return;
        }

        try
        {
            // Call the get cart endpoint with the cartId
            var response = await HttpClient.GetAsync($"/api/Carts/{_cartId}");
            if (response.IsSuccessStatusCode)
            {
                // The response contains { Cart, Total } structure
                Console.WriteLine($"Cart fetched successfully for cartId: {_cartId}");
                
                // For now, we'll load cart items directly
                _cart = new CartDto { CartId = _cartId };
                _errorMessage = null;
            }
            else
            {
                _errorMessage = "Failed to load cart";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error refreshing cart: {ex.Message}";
            Console.WriteLine(_errorMessage);
        }
    }

    private async Task UpdateQuantity(long cartItemId, double newQuantity)
    {
        if (_cart == null || _cartId == 0) return;
        if (newQuantity < 1)
        {
            await RemoveItem(cartItemId);
        }
        else
        {
            var item = _cart.CartItems?.FirstOrDefault(i => i.CartItemId == cartItemId);
            if (item == null) return;
            try
            {
                await CartService.UpdateCartItemAsync(_cartId, item.ProductId, newQuantity);
                await RefreshCartByCartId();
            }
            catch (Exception ex)
            {
                _errorMessage = $"Error updating quantity: {ex.Message}";
            }
        }
    }

    private async Task RemoveItem(long cartItemId)
    {
        if (_cart == null || _cartId == 0) return;
        var item = _cart.CartItems?.FirstOrDefault(i => i.CartItemId == cartItemId);
        if (item == null) return;
        try
        {
            await CartService.RemoveFromCartAsync(_cartId, item.ProductId);
            await RefreshCartByCartId();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error removing item: {ex.Message}";
        }
    }

    private void ContinueShopping()
    {
        NavigationManager.NavigateTo("");
    }

    private void Checkout()
    {
        NavigationManager.NavigateTo("checkout");
    }

    private decimal GetCartTotal()
    {
        if (_cart?.CartItems == null || _cart.CartItems.Count == 0)
            return 0;

        return _cart.CartItems.Sum(item => 
            (item.Product?.Price ?? 0) / 100.0m * (decimal)item.Quantity
        );
    }
}

<div class="bg-white">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">Shopping Cart</h1>

    @if (_isLoading)
    {
        <div class="flex items-center justify-center py-16">
            <div class="text-center">
                <i class="fas fa-spinner fa-spin text-orange-400 text-4xl mb-4"></i>
                <p class="text-gray-600">Loading cart...</p>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4">
            <p class="font-bold">Error</p>
            <p>@_errorMessage</p>
        </div>
    }
    else if (_cart?.CartItems == null || _cart.CartItems.Count == 0)
    {
        <div class="text-center py-16">
            <i class="fas fa-shopping-cart text-gray-300 text-6xl mb-4"></i>
            <p class="text-gray-600 mb-6 text-lg">Your cart is empty</p>
            <button 
                class="inline-flex items-center px-6 py-3 bg-orange-400 text-white rounded-lg hover:bg-orange-500 transition"
                @onclick="ContinueShopping"
            >
                <i class="fas fa-arrow-left mr-2"></i>Continue Shopping
            </button>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            @* Cart Items *@
            <div class="lg:col-span-2">
                <div class="space-y-4">
                    @foreach (var item in _cart.CartItems)
                    {
                        <div class="bg-orange-50 border-2 border-orange-300/50 rounded-lg p-4 flex gap-4">
                            <div class="w-24 h-24 bg-gray-100 rounded flex items-center justify-center flex-shrink-0">
                                <i class="fas fa-image text-gray-300 text-2xl"></i>
                            </div>
                            <div class="flex-1">
                                <h3 class="font-semibold text-gray-800 mb-2">@(item.Product?.Name ?? $"Product #{item.ProductId}")</h3>
                                <p class="text-gray-600 text-sm mb-2">$@((item.Product?.Price ?? 0) / 100.0m) each</p>
                                <div class="flex items-center gap-2 mb-3">
                                    <label class="text-sm text-gray-600">Qty:</label>
                                    <input 
                                        type="number" 
                                        min="1" 
                                        value="@item.Quantity" 
                                        @onchange="@(async (ChangeEventArgs e) => await UpdateQuantity(item.CartItemId, double.Parse(e.Value?.ToString() ?? "1")))"
                                        class="w-16 px-2 py-1 border border-gray-300 rounded text-center"
                                    />
                                </div>
                                <button 
                                    class="text-red-500 hover:text-red-700 text-sm font-semibold"
                                    @onclick="@(async () => await RemoveItem(item.CartItemId))"
                                >
                                    <i class="fas fa-trash mr-1"></i>Remove
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            @* Order Summary *@
            <div>
                <div class="bg-orange-50 border-2 border-orange-300/50 rounded-lg p-6 sticky top-4">
                    <h2 class="text-xl font-bold text-gray-800 mb-6">Order Summary</h2>
                    
                    <div class="space-y-3 mb-6 pb-6 border-b-2 border-orange-300/50">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Subtotal</span>
                            <span class="font-semibold">$@GetCartTotal().ToString("F2")</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Shipping</span>
                            <span class="font-semibold">$0.00</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600">Tax</span>
                            <span class="font-semibold">$0.00</span>
                        </div>
                    </div>

                    <div class="flex justify-between mb-6">
                        <span class="text-lg font-bold text-gray-800">Total</span>
                        <span class="text-2xl font-bold text-orange-400">$@GetCartTotal().ToString("F2")</span>
                    </div>

                    <button 
                        class="w-full py-3 px-4 bg-orange-400 text-white font-semibold rounded-lg hover:bg-orange-500 transition mb-3"
                        @onclick="Checkout"
                    >
                        <i class="fas fa-lock mr-2"></i>Proceed to Checkout
                    </button>

                    <button 
                        class="w-full py-3 px-4 border-2 border-orange-400 text-orange-400 font-semibold rounded-lg hover:bg-orange-50 transition"
                        @onclick="ContinueShopping"
                    >
                        <i class="fas fa-arrow-left mr-2"></i>Continue Shopping
                    </button>
                </div>
            </div>
        </div>
    }
</div>
